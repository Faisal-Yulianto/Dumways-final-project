<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      .container { width: 70%; padding: 20px 100px; } .input-group { display:
      flex; gap: 1rem; } .input-group .form-group { flex: 1; } 
    </style>
    <title>My website</title>
  </head>
  <body>
    <div class="container shadow bg-body-tertiary rounded">
      <h1 class="text-center pt-5">Edit kabupaten</h1>
      <form class="p-5" method="post" action="/kabupaten/edit/{{kabupaten.id}}" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="name" class="form-label">Nama kabupaten</label>
          <input type="text" class="form-control" id="name" name="nama" value="{{kabupaten.nama}}" required />
        </div>
          <div class="form-group">
            <label for="resmi" class="form-label">Tanggal diresmikan</label>
            <input type="text" class="form-control" id="resmi" name="diresmikan" value="{{kabupaten.diresmikan}}"  />
          </div>
        <div class="form-group">
        <label for="provinsi_id">Provinsi</label>
        <select
          class="form-control"
          id="provinsi_id"
          name="provinsi_id"
          value="{{kabupaten.provinsi_id}}"
          required
        >
         {{#each provinsiList}}
            <option value="{{this.id}}" 
                {{#ifEquals this.id ../kabupaten.provinsi_id}}selected{{/ifEquals}}>
                {{this.nama}}
            </option>
        {{/each}}
        </select>
      </div>
        <div class="mb-3">
          <label for="image" class="form-label">Upload Image</label>
          <input class="form-control" type="file" id="image" name="photo" />
        </div>
        <button type="submit" class="btn btn-dark float-end" id="submit">Update kabupaten</button>
      </form>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>