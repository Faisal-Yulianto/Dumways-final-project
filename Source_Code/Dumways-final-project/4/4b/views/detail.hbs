<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <link
      rel="shortcut icon"
      href="/assets/image/dumbways.png"
      type="image/x-icon"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>My website</title>
  </head>
  <body>
    <div class="container shadow p-5 mb-5 bg-secondary-subtle rounded">
      <div
        class="card mb-3 border border-0"
        style="max-width: 100%; height: max-content"
      >
        <div class="row g-0">
          <div class="col-md-4 border border-0 rounded shadow bg-body-tertiary rounded"
            style="width: 80%; height: 600px ; margin : auto" >
            <img src="/assets/uploads/{{provinsi.photo}}" style="width: 100%; height: 100%"/>
          </div>
            <div class="card-body text-center p-5">
              <h5 class="card-title">{{provinsi.nama}}</h5>
               <p>Diresmikan : {{provinsi.diresmikan}}</p>
               <p>Pulau : {{provinsi.pulau}}</p>
          </div>
        </div>
      </div>
      <a class="btn btn-dark col-1 m-2" href="/" role="button">Kembali</a>
    </div>
    <h1 class="text-center m-5">Kabupaten</h1>
    <div class="my-project d-flex justify-content-center flex-wrap mt-5">
        {{#each provinsi.kabupaten}}
          <div class="card m-2 p-3 " style="width: 30rem; max-height : 610px">
            <a href="/provinsi/{{this.id}}"><img src="../assets/uploads/{{this.photo}}" class="card-img-top p-2"  style="height: 450px;" />
            </a>
            <div class="card-body  text-center" style="height: 300px;">
              <h5 class="card-title">{{this.nama}}</h5>
              <p>{{this.diresmikan}}
                <div class="btn-group d-flex">
                    <a href="/kabupaten/edit/{{id}}" class="btn btn-dark m-1 rounded" style="width: 200px; height : 39px">Edit</a>
                    <form action="/kabupaten/delete/{{this.id}}?_method=DELETE" method="POST"  onsubmit="return confirm('Apakah Anda yakin ingin menghapus kabupaten ini?')">
                <button type="submit" class="btn btn-dark m-1" style="width: 200px;">Delete</button>
                     </form>
                </div>
            </div>
        </div>
        {{/each}}
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
